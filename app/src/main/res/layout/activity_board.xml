<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exemple.tetris.view.BoardActivity"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="60sp"
        android:layout_marginTop="30sp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/pontos"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/prox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/pr_x"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textColor="@android:color/black"
            android:layout_marginLeft="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"

        android:layout_marginBottom="10sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_gravity="left"
            android:src="@drawable/pause64"
            android:layout_marginLeft="5sp"
            android:backgroundTint="@android:color/transparent"/>

        <GridLayout
            android:id="@+id/gridboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginHorizontal="30sp"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btLeft"
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_gravity="left"
            android:src="@drawable/left64"
            android:backgroundTint="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/speed"
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_gravity="bottom"
            android:src="@drawable/down64"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/btRight"
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_gravity="right"
            android:src="@drawable/right64"
            android:backgroundTint="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btRotate"
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_gravity="right"
            android:src="@drawable/rotate64"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
